# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index


# Download a BAM index
GET     /download/$key<([\w.]+).bai>                   controllers.BamController.downloadIndex(key: String, desc: Option[String])
GET     /downloadRange/$key<([\w.]+).bai>                   controllers.BamController.downloadIndex(key: String, desc: Option[String])
# Download a BAM file
#GET     /download/:key                   controllers.BamController.download(key: String, region: Option[String], desc: Option[String])
GET     /download/:key/:region                   controllers.BamController.download(key: String, region: String, desc: Option[String])
GET     /downloadRange/:key                   controllers.BamController.downloadRange(key: String, desc: Option[String])
# Create a symlink of a BAM file in /www and return the path to it
GET     /symlink/:key                    controllers.BamController.symlink(key: String, region: Option[String], desc: Option[String])
# Return the output of "samtools view -hb"
GET     /read/:key                       controllers.BamController.read(key: String, region: String ?= "", desc: Option[String])
# View a region of a BAM file
GET     /view/:key                       controllers.BamController.view(key: String, region: String ?= "", desc: Option[String])


# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count

# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
