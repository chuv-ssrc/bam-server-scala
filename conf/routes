# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Say hello
GET /                                     controllers.HomeController.index

# Get BAM index
POST /bai                                 controllers.IndexController.baiPost
GET /bai/:sample                          controllers.IndexController.baiGet(sample: String, token: Option[String])

# Read bytes fom BAM with 'Range' header
POST /bam/range                           controllers.RangeController.bamPost()
GET /bam/range/:sample                    controllers.RangeController.bamGet(sample: String, token: Option[String], range: Option[String])

# Read BAM using samtools
POST /bam/samtools                        controllers.SamtoolsController.bamPost(region: Option[String])
GET /bam/samtools/:sample                 controllers.SamtoolsController.bamGet(sample: String, token: Option[String], region: Option[String])

# Return JSON-formatted reads
POST /bam/json                            controllers.JsonController.bamPost(region: Option[String])
GET /bam/json/:sample                     controllers.JsonController.bamGet(sample: String, token: Option[String], region: Option[String])



# (This was already here:)
# Map static resources from the /public folder to the /assets URL path
GET /assets/*file                         controllers.Assets.versioned(path="/public", file: Asset)
