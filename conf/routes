# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Say hello
GET /                                     controllers.HomeController.index

# Get BAM index
POST /bai                                 controllers.IndexController.baiPost
GET /bai/:sampleKey/:token                controllers.IndexController.baiGet(sampleKey: String, token: String)

# Read bytes fom BAM with 'Range' header
POST /bam/range                           controllers.RangeController.bamPost()
GET /bam/range/:sampleKey/:token          controllers.RangeController.bamGet(sampleKey: String, token: String, range: Option[String])

# Read BAM using samtools
POST /bam/samtools                        controllers.SamtoolsController.bamPost(region: Option[String])
GET /bam/samtools/:sampleKey/:token       controllers.SamtoolsController.bamGet(sampleKey: String, token: String, region: Option[String])

## Return JSON-formatted reads
POST /bam/json                            controllers.JsonController.bamPost(region: Option[String])
GET /bam/json/:sampleKey/:token           controllers.JsonController.bamGet(sampleKey: String, token: String, region: Option[String])





# (This was already here:)
# Map static resources from the /public folder to the /assets URL path
GET /assets/*file                         controllers.Assets.versioned(path="/public", file: Asset)
